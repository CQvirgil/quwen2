<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="Orientation">

    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_act_record_status"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5bb943"
                android:textSize="11sp"
                android:background="@drawable/act_record_status1"
                android:padding="6dp"
                android:text="正在申请"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/item_act_record_money"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="11sp"
            android:layout_marginTop="6dp"
            android:text="5元"/>

        <TextView
            android:id="@+id/item_act_record_num"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="11sp"
            android:layout_marginTop="6dp"
            android:text="1600"/>

        <TextView
            android:id="@+id/item_act_record_date"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="11sp"
            android:layout_marginTop="6dp"
            android:text="01-16"/>

    </LinearLayout>

</LinearLayout>
