<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity.Fragment.Task.Assemble.MemberInformation.MemberInformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/img_channle_goback"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="12dp"
            android:onClick="Back"
            />

        <TextView
            android:id="@+id/act_member_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/act_help_head_text"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="团ID：632154"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:textColor="#fefefe"
            android:textSize="10sp"
            android:background="@drawable/btn_member_information_go_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:onClick="goAssemble"
            android:text="去拼团"/>
        
    </RelativeLayout>

    <ListView
        android:layout_weight="1"
        android:id="@+id/act_member_mlistview"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>