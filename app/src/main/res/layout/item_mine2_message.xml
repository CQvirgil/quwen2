<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="27dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_mine2_message_point"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/point"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_mine2_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="2"
        android:text="未读消息标题内容比如200金币已兑换成功，将在24小时内到账，标题内容最多2行…"
        android:theme="@style/qw_title"
        app:layout_constraintStart_toEndOf="@+id/item_mine2_message_point"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/item_mine2_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:theme="@style/qw_text"
        android:textColor="@color/text_secondary"
        android:text="今天  13:00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_mine2_message_title"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>
