<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity.Fragment.Mine.QYFE.QYFEActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="171dp">

        <LinearLayout
            android:background="@drawable/act_qyfe_head_bg"
            android:layout_width="match_parent"
            android:layout_height="116dp">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp">

                <ImageButton
                    android:layout_width="30dp"
                    android:background="@null"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:onClick="GoBack"
                    android:src="@mipmap/go_back_white"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="115dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/act_qyfe_content_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1506"
                        android:textColor="#666666"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的权益份额"
                        android:textColor="#666666"
                        android:textSize="11sp" />

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="23dp"
                    android:background="#ccc" />

                <LinearLayout
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7532"
                        android:textColor="#666666"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="权益份额总排名"
                        android:textColor="#666666"
                        android:textSize="11sp" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#ccc" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                android:text="全体用户总权益份额：85411506"/>

        </LinearLayout>
        
    </RelativeLayout>

    <LinearLayout
        android:weightSum="2"
        android:background="@drawable/act_qyfe_content_bg2"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                android:background="@drawable/act_qyfe_btn_bg"
                android:layout_width="97dp"
                android:layout_height="35dp"
                android:textSize="13sp"
                android:textColor="#ea3535"
                android:onClick="DirectionalGift"
                android:text="定向赠送"/>

            <TextView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:paddingTop="22dp"
                android:paddingRight="11dp"
                android:paddingLeft="11dp"
                android:textSize="10sp"
                android:textColor="#666"
                android:background="@drawable/bg_kuang"
                android:text="输入赠送对象ID和赠送份额可以把权益份额赠送给指定用户,还可以设置指定密码，对方输入后才可领取"/>

        </LinearLayout>
        
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#ccc"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                android:background="@drawable/act_qyfe_btn_bg"
                android:layout_width="97dp"
                android:layout_height="35dp"
                android:textSize="13sp"
                android:textColor="#ea3535"
                android:text="竞价变现"/>

            <TextView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:paddingTop="22dp"

                android:paddingRight="11dp"
                android:paddingLeft="11dp"
                android:textSize="10sp"
                android:textColor="#666"
                android:background="@drawable/bg_kuang"
                android:text="在累计收益达到一定数量或者使用APP满一定时间之后可以申请变现和竞价"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>