<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="225dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/img_task_bg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/fgm_task_head_text"
                            android:text="我的任务"
                            />

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="27dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#fff"
                                android:text="6021个"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:theme="@style/fgm_task_content_text"
                                android:textSize="10sp"
                                android:textColor="#fff"
                                android:text="我的权益份额"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/fgm_task_bg"
                        android:layout_width="225dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#fff"
                            android:text="今日获得权益份额：45个"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#fff"
                            android:layout_marginTop="12dp"
                            android:text="在朋友圈中排名：12"/>
                        <View
                            android:layout_width="102dp"
                            android:layout_height="0.5dp"
                            android:background="#fff"/>

                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/fgm_task_content_text"
                        android:layout_marginLeft="12dp"
                        android:text="任务完成度"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >

                        <com.lecai.quwen.MyView.mProgressBar2
                            android:layout_width="264dp"
                            android:layout_height="30dp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_task"
                    android:layout_width="266dp"
                    android:layout_height="45dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="3dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/gradation"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:text="日常任务"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/item_msg"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fgm_Mine_icon_msg"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_task_use_icon"/>

                    <TextView
                        android:id="@+id/text0"
                        android:layout_toRightOf="@id/fgm_Mine_icon_msg"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/task_item_text"
                        android:text="激活"/>


                    <Button
                        android:id="@+id/fgm_task_btn1"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/task_btn_bg"
                        android:layout_width="73dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="12dp"
                        android:textColor="#ea3535"
                        android:text="去阅读"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="41dp"
                    android:background="#d9d9d9"/>

                <RelativeLayout
                    android:id="@+id/item_set"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fgm_Mine_icon_setting"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_task_position_icon"/>

                    <TextView
                        android:id="@+id/text2"
                        android:layout_toRightOf="@id/fgm_Mine_icon_setting"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/task_item_text"
                        android:text="位置打卡"/>

                    <ImageView
                        android:id="@+id/hint2"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_task_hint_icon" />

                    <Button
                        android:id="@+id/fgm_task_btn2"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/task_btn_bg"
                        android:layout_width="73dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="12dp"
                        android:textColor="#ea3535"
                        android:text="去打卡"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="41dp"
                    android:background="#d9d9d9"/>

                <RelativeLayout
                    android:id="@+id/item_help"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fgm_Mine_icon_help"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_task_assemble_icon"/>

                    <TextView
                        android:id="@+id/text3"
                        android:layout_toRightOf="@id/fgm_Mine_icon_help"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/task_item_text"
                        android:text="拼团获得奖励"/>

                    <ImageView
                        android:id="@+id/hint3"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text3"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_task_hint_icon" />

                    <Button
                        android:id="@+id/fgm_task_btn3"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/task_btn_bg"
                        android:layout_width="73dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="12dp"
                        android:textColor="#ea3535"
                        android:text="去拼团"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="41dp"
                    android:background="#d9d9d9"/>

                <RelativeLayout
                    android:id="@+id/item_about"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fgm_Mine_icon_updata"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_task_disciple_icon"/>

                    <TextView
                        android:id="@+id/text4"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/fgm_Mine_icon_updata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/task_item_text"
                        android:text="收徒弟"/>

                    <ImageView
                        android:id="@+id/hint4"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text4"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_task_hint_icon" />

                    <Button
                        android:id="@+id/fgm_task_btn4"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/task_btn_bg"
                        android:layout_width="73dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="12dp"
                        android:textColor="#ea3535"
                        android:text="去收徒"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="3dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/gradation"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:text="成长任务"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/item_create_assemble"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fgm_Mine_icon_create_assemble"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_task_use_icon"/>

                    <TextView
                        android:id="@+id/text5"
                        android:layout_toRightOf="@id/fgm_Mine_icon_create_assemble"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/task_item_text"
                        android:text="创建团"/>


                    <ImageView
                        android:id="@+id/hint5"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text5"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_task_hint_icon" />

                    <Button
                        android:id="@+id/fgm_task_btn5"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/task_btn_bg"
                        android:layout_width="73dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="12dp"
                        android:textColor="#ea3535"
                        android:text="去创建"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="41dp"
                    android:background="#d9d9d9"/>

                <RelativeLayout
                    android:id="@+id/item_join_assemble"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fgm_Mine_join_assemble"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_task_position_icon"/>

                    <TextView
                        android:id="@+id/text6"
                        android:layout_toRightOf="@id/fgm_Mine_join_assemble"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/task_item_text"
                        android:text="加入团"/>

                    <ImageView
                        android:id="@+id/hint6"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text6"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_task_hint_icon" />

                    <Button
                        android:id="@+id/fgm_task_btn6"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/task_btn_bg"
                        android:layout_width="73dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="12dp"
                        android:textColor="#ea3535"
                        android:text="去加入"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="41dp"
                    android:background="#d9d9d9"/>

                <RelativeLayout
                    android:id="@+id/item_bound_master"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fgm_Mine_bound_master"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_task_assemble_icon"/>

                    <TextView
                        android:id="@+id/text7"
                        android:layout_toRightOf="@id/fgm_Mine_bound_master"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/task_item_text"
                        android:text="绑定师傅"/>

                    <ImageView
                        android:id="@+id/hint7"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text7"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_task_hint_icon" />

                    <Button
                        android:id="@+id/fgm_task_btn7"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/task_btn_bg"
                        android:layout_width="73dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="12dp"
                        android:textColor="#ea3535"
                        android:text="去绑定"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
