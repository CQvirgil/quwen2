<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/fgm_Mine_LL_user"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:background="@drawable/img_mine_bg"
                                android:layout_width="match_parent"
                                android:layout_height="200dp">

                                <RelativeLayout
                                    android:layout_marginTop="23dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <com.lecai.quwen.MyView.CircleImage
                                        android:id="@+id/user_icon"

                                        android:layout_width="71dp"
                                        android:layout_height="71dp"
                                        />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_toRightOf="@id/user_icon"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/user_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:text="username"
                                            android:textColor="#ffffff"
                                            android:theme="@style/mine_user_name" />
                                        <TextView
                                            android:id="@+id/fgm_mine_text_useru_id"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#ffffff"
                                            android:theme="@style/mine_user_ID"
                                            android:text="工号ID：502103"/>
                                    </LinearLayout>

                                </RelativeLayout>


                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/fgm_Mine_ll_QYFE"
                            android:gravity="center"
                            android:background="@drawable/fgm_mine_qyfe_bg"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:layout_width="351dp"
                            android:layout_height="46dp">

                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="160dp"
                                android:layout_height="70dp">
                                <TextView
                                    android:id="@+id/fgm_Mine_text_usertoken2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:theme="@style/mine_num"
                                    android:textColor="#fff"
                                    android:text="0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:theme="@style/mine_text"
                                    android:textColor="#fff"

                                    android:text="我的权益份额"/>
                            </LinearLayout>
                            
                            <View
                                android:layout_width="1dp"
                                android:layout_height="34dp"
                                android:layout_marginTop="2dp"
                                android:background="#2effffff"/>

                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="160dp"
                                android:layout_height="70dp">
                                <TextView
                                    android:id="@+id/fgm_Mine_text_usertoken"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:theme="@style/mine_num"
                                    android:textColor="#fff"
                                    android:text="0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:theme="@style/mine_text"
                                    android:textColor="#fff"
                                    android:text="我的权益份额排名"/>
                            </LinearLayout>

                        </LinearLayout>
                        
                    </RelativeLayout>
                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/item_msg"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <ImageView
                        android:id="@+id/fgm_Mine_icon_msg"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_mine_msg_icon"/>
                    
                    <TextView
                        android:id="@+id/text0"
                        android:layout_toRightOf="@id/fgm_Mine_icon_msg"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/mine_item_text"
                        android:text="@string/mine_item_0"/>

                    <TextView
                        android:id="@+id/hint0"
                        android:textColor="#9f9f9f"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/go0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/go0"
                        android:layout_alignParentRight="true"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_launcher_rarrow"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="41dp"
                    android:background="#d9d9d9"/>

                <RelativeLayout
                    android:id="@+id/item_set"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fgm_Mine_icon_setting"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_mine_setting_icon"/>

                    <TextView
                        android:id="@+id/text2"
                        android:layout_toRightOf="@id/fgm_Mine_icon_setting"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/mine_item_text"
                        android:text="@string/mine_item_2"/>

                    <TextView
                        android:id="@+id/hint2"
                        android:textColor="#9f9f9f"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/go2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/go2"
                        android:layout_alignParentRight="true"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_launcher_rarrow"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="41dp"
                    android:background="#d9d9d9"/>

                <RelativeLayout
                    android:id="@+id/item_help"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fgm_Mine_icon_help"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_mine_help_icon"/>

                    <TextView
                        android:id="@+id/text3"
                        android:layout_toRightOf="@id/fgm_Mine_icon_help"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/mine_item_text"
                        android:text="@string/mine_item_3"/>

                    <TextView
                        android:id="@+id/hint3"
                        android:textColor="#9f9f9f"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/go3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/go3"
                        android:layout_alignParentRight="true"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_launcher_rarrow"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="41dp"
                    android:background="#d9d9d9"/>

                <RelativeLayout
                    android:id="@+id/item_update"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fgm_Mine_icon_updata"
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_mine_updata_icon"/>

                    <TextView
                        android:id="@+id/text4"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/fgm_Mine_icon_updata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/mine_item_text"
                        android:text="@string/mine_item_4"/>

                    <TextView
                        android:id="@+id/hint4"
                        android:textColor="#9f9f9f"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/go4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/go4"
                        android:layout_alignParentRight="true"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_launcher_rarrow"/>
                </RelativeLayout>

            </LinearLayout>

            </LinearLayout>

    </ScrollView>


</LinearLayout>
